# MongoDB connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority

# JWT configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d

# Cloudinary credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URLs
CLIENT_BASE_URL=http://localhost:3000
FRONTEND_URLS=http://localhost:5173/

# Email credentials (use app passwords for Gmail, not your real password)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password

# Firebase Service Account (Base64 encoded JSON)
FIREBASE_SERVICE_ACCOUNT_B64=your_base64_encoded_json
